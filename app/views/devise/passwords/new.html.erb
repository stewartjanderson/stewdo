
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-signin"}) do |f| %>
<h2>Forgot your password?</h2>
  <%= f.error_notification %>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email address", input_html: {class: "form-control"} %>

    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-success btn-block" %>

<div id="sub-area">
<%= render "devise/shared/links" %>
</div>
<% end %>