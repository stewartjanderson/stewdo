
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-signin"}) do |f| %>
<h2>Change your password</h2>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

    <%= f.input :password, label: false, required: true, autofocus: true, placeholder: "New Password", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, label: false, required: true, placeholder: "Confirm your new password", input_html: {class: "form-control"} %>
    <%= f.button :submit, "Change My Password", class: "btn btn-success btn-block"  %>
<div id="sub-area">
  <%= render "devise/shared/links" %>
</div>
<% end %>
